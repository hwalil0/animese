<% include ../partials/header %>
<style>
  body{
    background-color: black;
  }
  .bosluk{
    height: 100px;
  }
  .bosluk2{
    height: 20px;
  }
</style>    
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-dark text-white">
      <h1 class="text-center mb-3">Edit Categoi</h1>
      <form action="/admin/edit/categori/<%- c._id %>" method="POST">
        <div class="form-group">
          <label for="name">Categori Name</label>
          <input
            type="name"
            id="name"
            name="c[name]"
            class="form-control"
            placeholder="Categori Name"
            value="<%- c.name %>"
          />
        </div>
        <div class="form-group">
            <label for="img">Categori Name</label>
            <input
              type="url"
              id="img"
              name="c[img]"
              class="form-control"
              placeholder="Categori Ä°mg"
              value="<%- c.img %>"
            />
          </div>
   
        <button type="submit" class="btn btn-primary btn-block">Save</button>
      </form>
    </div>
  </div>
</div>
